				img(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-sizes="auto" data-src=desktopSrc data-srcset="" alt="This is some fake alt text").lazyload

			if filter
				.filter
	// Responsive image ends

mixin image-no-aspect(src)
	img(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-sizes="auto" data-src=src data-srcset="" alt="This is some fake alt text").lazyload